<section class="container ">

  <h2 class="text-2xl text-center text-white">忘記密碼了嗎?</h2>
  <section class="py-8 my-10 text-center bg-white rounded-md">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="my-5">
        <%= f.label :email , '信箱'%><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"rounded-md"  %>
      </div>

      <div class="my-3">
        <%= f.submit "向我發送重置密碼" ,class:"btn btn-disable"%>
      </div>
    <% end %>
    <div class="flex justify-center">  
      <%= render "devise/shared/links" %>
    </div>
  
  </section>

</section>

